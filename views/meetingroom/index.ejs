<%- partial ('../topbar.ejs') %>
<div id="chat" ng-app="meetingroom" ng-controller="meetingroomController">

    <div id="myslimscroll">
        <ul class="content">
            <li ng-repeat="message in messages">
                <div class="chatPicture">
                    <a href="#" class="shadow"><img ng-src="{{message.user.img}}" width="60px" height="60px"></a>
                </div>
                <div class="chatPost">
                    <span class="chatName" ng-bind="message.user.name"></span><span class="chatTimestamp">{{message.timestamp | date:'medium'}}</span>
                    <p ng-repeat="p in message.text track by $index" ng-bind="p"></p>
                </div>
            </li>

        </ul>
    </div>

    <div id="messageBoxContainer">
        <div class="chatPicture"><a href="#" class="shadow"><img src="/img/profile_pictures/andreas.png" width="60px" height="60px"></a>
        </div>
        <div id="messageBox">
            <textarea id="message" rows="3" wf-enter="sendMessage()" placeholder="Write your message..." ng-model="messageText"></textarea>
        </div>
    </div>
</div>


<script src="/libs/jquery/jquery-2.0.3.min.js"></script>
<script src="/libs/angular/angular.min.js"></script>
<script src="/libs/jquery.slimscroll.js"></script>

<script src="/modules/meetingroom/meetingroom.js"></script>
