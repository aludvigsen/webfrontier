<%- partial ('../topbar.ejs') %>

<div id="userpage">
    <h3>User Administration</h3>

    <table class='table'>
        <tr data-id="<%= user.id %>" data-model="user">
            <td>Navn</td>
            <td><%= user.name %></td>
        </tr>

        <tr>
            <td>Epost</td>
            <td><%= user.email %></td>
        </tr>

        <% if (user.admin) { %>
        <tr>
            <td> <img src="/images/user/admin.png" style="margin-top: 3px;"></td>
        </tr>
        <% } %>
    </table>

    <a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Vis</a>
    <a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Rediger</a>

    <form action="/user/destroy/<%= user.id %>" method="POST">
        <input type="hidden" name="_method" value="delete"/>
        <input type="submit" class="btn btn-sm btn-danger" value="Slett"/>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    </form>
</div>