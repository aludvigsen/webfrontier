<%- partial ('../topbar.ejs') %>
<div id="log-in-page">
    <% if(flash && flash.err) { %>
    <p><strong>Info!</strong> <%= flash.err[0].message %></p>
    <% } %>

    <form action="/session/create" method="POST">
        <table cellpadding="4">
            <tr>
                <td>Email</td>
                <td>
                    <input type="text" name="email">
                </td>
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <input type="password" name="password">
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Logg inn"></td>
            </tr>
        </table>
    </form>

</div>